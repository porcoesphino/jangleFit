<div class="panel-group">
  <div class="panel panel-success">
    <div class="panel-heading">
       {{ title }}: {{ ladder }} - {{ rung }}
    </div>
    <div id="panel-content">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-condensed">
          <thead>
            <tr>
              <th></th>
              <th>Stretching</th>
              <th>Sit-up</th>
              <th>Back extension</th>
              <th>Push-up</th>
<!-- TODO: Move the title into the th and adjust css -->
<!-- TODO: Touch screen support?? -->
              <th><abbr title="Stationary Run">Option 1</abbr></th>
              <th><abbr title="Outside Run">Option 2</abbr></th>
              <th><abbr title="Outside Walk">Option 3</abbr></th>
            </tr>
          </thead>
          <tbody>

      {{#each rows}}
            <tr>
              <td>{{ this.label }}</td>
              {{#each this.exercises}}
              <td>{{ this }}</td>
              {{/each}}
            </tr>
      {{/each}}

          </tbody>
      </table>
    </div>
    <div class="jumbotron">
      <p>Congratulations!</p>
      <p>You're up to
        <span class="badge" style="font-size:inherit;">{{ ladder }}</span>
        <span class="badge" style="font-size:inherit;">{{ rung }}</span>
      </p>
    <button id="start-btn" class="btn btn-default">Let's Start!</button>
  </div>
</div>
